# IMPORTANTE: Renomeie este arquivo para .env e preencha com suas informações

# Email Configuration (para recuperação de senha)
# Para Gmail: Crie uma "Senha de App" em https://myaccount.google.com/apppasswords
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USE_SSL=false
MAIL_USERNAME=seu-email@gmail.com
MAIL_PASSWORD=sua-senha-de-aplicativo-aqui
MAIL_DEFAULT_SENDER=noreply@pickles.com

# Database
DATABASE_URL=sqlite:///users.db

# Flask
SECRET_KEY=dev-secret-key-change-in-production
FLASK_ENV=development

# API
API_HOST=127.0.0.1
API_PORT=5001

# GitHub OAuth (opcional)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=1000 per hour, 100 per minute
